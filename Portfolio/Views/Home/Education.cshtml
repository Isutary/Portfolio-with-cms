@model List<Education>

@section Stylesheet {
    <link rel="stylesheet" asp-href-include="/css/education.css" asp-append-version=true />
}

<div id="target" class="target" style="margin-top:70px">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="row justify-content-center pb-3">
            <div class="col-md-8" style="background:red;">
                <div class="row fill-container">
                    <div class="col-md-4 bg-light text-center d-none d-sm-none d-md-block">
                        <div class="row">
                            <img class="img-fluid" src="/images/html5.jpg" style="min-height:100%;min-width:100%" />
                        </div>
                        <div class="row justify-content-center">
                            <a class="col btn btn-social btn-amazon order align-self-center" href="@Model[i].OrderLink">
                                <span class="fa fa-amazon"></span> Order now
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8 bg-primary text-light text-center p-1 @(i % 2 == 0 ? "" : "order-first")">
                        <span class="display-4">@Model[i].Title</span>
                        <div class="text-justify p-4 lead">
                            @Model[i].Description
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script asp-src-include="/js/education.js" asp-append-version=true></script>
}