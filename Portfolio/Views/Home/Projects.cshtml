@model List<Projects>

@section Stylesheet {
    <link rel="stylesheet" asp-href-include="/css/home.css" asp-append-version=true />
}
<div id="target" class="target" style="margin-top:70px">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="row fill-container">
                    <div class="col-md-6 text-center">
                        <div class="m-2 bg-danger">
                            <span class="display-4">@Model[i].Title</span>
                            <div class="text-justify p-4 lead">
                                @Model[i].Description
                            </div>
                            <a class="btn btn-social-icon btn-github social" href="@Model[i].GithubLink" target="_blank">
                                <span class="fa fa-github"></span>
                            </a>
                            @if (@Model[i].Website != "")
                            {
                                <a class="btn btn-social-icon btn-github social" href="@Model[i].Website" target="_blank">
                                    <span class="fas fa-external-link-alt"></span>
                                </a>
                            }
                        </div>
                    </div>
                    @if (i + 1 < Model.Count)
                    {
                        i++;
                        <div class="col-md-6 text-center">
                            <div class="m-2 bg-danger">
                                <span class="display-4">@Model[i].Title</span>
                                <div class="text-justify p-4 lead">
                                    @Model[i].Description
                                </div>
                                <a class="btn btn-social-icon btn-github social" href="@Model[i].GithubLink" target="_blank">
                                    <span class="fa fa-github"></span>
                                </a>
                                @if (Model[i].Website != "")
                                {
                                    <a class="btn btn-social-icon btn-github social" href="@Model[i].Website" target="_blank">
                                        <span class="fas fa-external-link-alt"></span>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script asp-src-include="/js/education.js" asp-append-version=true></script>
}
