<div id="targetForMargin" class="targetForMargin">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="mt-2 mb-2 row justify-content-center">
            <div class="col-md-7 p-0">
                <div class="row fill-container text-light">
                    <div class="col-md-6 text-center margin">
                        <div class="bg-primary h-100 p-2 shadow">
                            <span class="display-4">@Model[i].Title</span>
                            <div class="text-justify p-4 lead">
                                @Model[i].Description
                            </div>
                            <a class="btn btn-social-icon btn-github social" href="@Model[i].GithubLink" target="_blank">
                                <span class="fa fa-github"></span>
                            </a>
                            @if (@Model[i].Website != "")
                            {
                                <a class="btn btn-social-icon btn-github social" href="@Model[i].Website" target="_blank">
                                    <span class="fas fa-external-link-alt"></span>
                                </a>
                            }
                        </div>
                    </div>
                    @if (i + 1 < Model.Count)
                    {
                        i++;
                        <div class="col-md-6 text-center margin">
                            <div class="bg-primary h-100 p-2 shadow">
                                <span class="display-4">@Model[i].Title</span>
                                <div class="text-justify p-4 lead">
                                    @Model[i].Description
                                </div>
                                <a class="btn btn-social-icon btn-github social" href="@Model[i].GithubLink" target="_blank">
                                    <span class="fa fa-github"></span>
                                </a>
                                @if (Model[i].Website != "")
                                {
                                    <a class="btn btn-social-icon btn-github social" href="@Model[i].Website" target="_blank">
                                        <span class="fas fa-external-link-alt"></span>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
